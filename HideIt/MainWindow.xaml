<Window x:Class="HideIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hide It" Height="600" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="540*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" >
            <TabItem Header="Opcje podstawowe">
                <Grid Background="#FFFFFFFF"/>
            </TabItem>
            <TabItem Header="Opcje zaawansowane">
                <Grid Background="#FFFFFFFF"/>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">
        </Grid>
    </Grid>
</Window>
